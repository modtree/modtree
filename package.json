{
  "name": "modtree",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "ci:build": "turbo run ci:build",
    "build:db": "turbo run build --filter=database",
    "test:db": "turbo run test --filter=database",
    "lint": "turbo run lint",
    "dev": "turbo run dev --filter=database --filter=web --parallel",
    "dev:docs": "turbo run dev --filter=docs",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "rm:logs": "find . -name *.log | xargs rm",
    "setup": "yarn && yarn build:db && yarn default:env",
    "heroku-postbuild": "yarn build:db",
    "default:env": "turbo run default:env",
    "version": "auto-changelog -p && git add --all"
  },
  "devDependencies": {
    "auto-changelog": "^2.4.0",
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "npm": "8.x",
    "node": "16.x",
    "yarn": "1.x"
  },
  "packageManager": "yarn@1.22.18"
}
