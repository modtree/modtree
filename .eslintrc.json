{
  "root": true,
  "overrides": [
    {
      "plugins": ["jsdoc"],
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": { "no-unused-vars": ["error", { "argsIgnorePattern": "^_$" }] }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": [],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": [],
      "rules": {}
    },
    {
      "files": ["*.test.ts", "*.spec.ts"],
      "extends": [],
      "rules": {
        "@typescript-eslint/no-non-null-assertion": 0
      }
    }
  ]
}
