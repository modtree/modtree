{
  "name": "database",
  "version": "0.0.0",
  "license": "MIT",
  "description": "modtree database with MySQL",
  "type": "commonjs",
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@types/jest": "^27.5.0",
    "@types/mysql": "^2.15.21",
    "@types/node": "^16.11.10",
    "babel-jest": "^28.1.0",
    "jest": "^28.1.0",
    "modtree-config": "*",
    "ts-jest": "^28.0.2",
    "ts-node": "10.7.0",
    "typescript": "4.5.2"
  },
  "dependencies": {
    "@inquirer/input": "^0.0.20-alpha.0",
    "axios": "^0.27.2",
    "dotenv": "^16.0.0",
    "inquirer": "^8.2.4",
    "mysql2": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.6"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint --fix --ext .js,.ts .",
    "test": "NODE_ENV=test jest --silent",
    "test:v": "NODE_ENV=test jest",
    "dev": "node lib",
    "dump": "ts-node ./src/api/sql/dump",
    "restore": "ts-node ./src/api/sql/restore",
    "start": "ts-node src/index",
    "typeorm": "typeorm-ts-node-commonjs",
    "au": "ts-node ./src/api/user/add",
    "ctm": "ts-node ./src/api/user/canTakeModule",
    "lm": "ts-node ./src/api/listModule",
    "lmc": "ts-node ./src/api/listModuleCodes",
    "fm": "ts-node ./src/api/nusmods/fetch/module",
    "fom": "ts-node ./src/api/nusmods/fetch/oneModule",
    "fsm": "ts-node ./src/api/nusmods/fetch/someModules",
    "fmc": "ts-node ./src/api/nusmods/fetch/moduleCondensed",
    "fnmc": "ts-node ./src/api/nusmods/fetch/newModuleCondensed",
    "pmc": "ts-node ./src/api/nusmods/pull/moduleCondensed",
    "pm": "ts-node ./src/api/nusmods/pull/module",
    "pmc:heroku": "NODE_ENV=heroku ts-node ./src/api/nusmods/pull/moduleCondensed",
    "reset:all": "ts-node ./src/api/sql/resetAll",
    "reset:mc": "ts-node ./src/api/sql/resetModuleCondensed",
    "reset:m": "ts-node ./src/api/sql/resetModule"
  },
  "jest": {
    "clearMocks": true,
    "preset": "ts-jest",
    "globalSetup": "./tests/setup.ts",
    "globalTeardown": "./tests/teardown.ts",
    "testMatch": [
      "**/tests/**/*.[jt]s?(x)",
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "testPathIgnorePatterns": [
      "setup.ts",
      "teardown.ts"
    ]
  }
}
