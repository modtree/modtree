{
  "name": "database",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "description": "modtree database with MySQL",
  "main": "./dist/index.js",
  "type": "commonjs",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^27.5.0",
    "@types/mysql": "^2.15.21",
    "@types/node": "^16.11.10",
    "@types/pg": "^8.6.5",
    "@types/cors": "^2.8.12",
    "eslint-plugin-jest": "^26.2.2",
    "jest": "^28.1.0",
    "modtree-config": "*",
    "ts-node": "10.7.0",
    "typescript": "4.5.2",
    "ts-jest": "^28.0.2"
  },
  "dependencies": {
    "@inquirer/input": "^0.0.20-alpha.0",
    "axios": "^0.27.2",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.1",
    "inquirer": "^8.2.4",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.3",
    "nodemon": "^2.0.16",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.6"
  },
  "scripts": {
    "start": "node dist/server",
    "build": "rm -rf ./dist && tsc --declaration",
    "dev": "nodemon --exec \"yarn build && yarn start\" -e js --ignore dist/",
    "test": "yarn test:ci --detectOpenHandles",
    "test:v": "yarn test:ci --detectOpenHandles --silent=false",
    "test:ci": "NODE_ENV=test jest --config ./tests/configs/ci.config.ts",
    "test:pull": "NODE_ENV=test jest --config ./tests/configs/pull.config.ts",
    "test:k": "NODE_ENV=test jest --config ./tests/configs/khang.config.ts --detectOpenHandles",
    "test:blc": "yarn build && yarn lint && yarn test:ci",
    "test:all": "NODE_ENV=test jest --config ./tests/configs/all.config.ts",
    "test:w": "NODE_ENV=test jest --config ./tests/configs/w.config.ts",
    "lint": "eslint --fix --ext .js,.ts .",
    "lint:prettier": "prettier --ignore-path .gitignore --write . && yarn lint",
    "dump": "ts-node ./src/api/sql/dump.ts",
    "restore": "ts-node ./src/api/sql/restore.ts",
    "restore:file": "ts-node ./src/api/sql/restore-from-file.ts",
    "reset:all": "ts-node ./src/api/sql/reset/all.ts",
    "reset:mc": "ts-node ./src/api/sql/reset/moduleCondensed.ts",
    "reset:m": "ts-node ./src/api/sql/reset/module.ts",
    "reset:d": "ts-node ./src/api/sql/reset/degree.ts",
    "typeorm:ds": "typeorm-ts-node-esm -d ./src/config.ts",
    "mc": "yarn typeorm:ds schema:log",
    "mg": "yarn typeorm:ds migration:generate ./src/migrations/migration-name",
    "mr": "yarn typeorm:ds migration:run",
    "module:get-codes": "ts-node ./src/api/module/get-codes.ts",
    "module:get": "ts-node ./src/api/module/get.ts",
    "module:pull": "ts-node ./src/api/module/pull.ts",
    "module:fetch-one": "ts-node ./src/api/module/fetch-one.ts",
    "module:find-by-codes": "ts-node ./src/api/module/find-by-codes.ts",
    "module:find-by-faculty": "ts-node ./src/api/module/find-by-faculty.ts",
    "modcon:fetch": "ts-node ./src/api/module-condensed/fetch.ts",
    "modcon:pull": "ts-node ./src/api/module-condensed/pull.ts",
    "modcon:get-codes": "ts-node ./src/api/module-condensed/get-codes.ts",
    "modcon:json": "ts-node ./src/api/module-condensed/json.ts",
    "graph": "madge --image graph.png"
  }
}
