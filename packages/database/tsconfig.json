{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "types": ["@types/jest"],
    "typeRoots": ["./types"]
  },
  "include": ["src", "tests", "types"],
  "exclude": ["dist", "node_modules"]
}
