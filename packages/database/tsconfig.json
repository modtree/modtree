{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "types": ["@types/jest"],
    "typeRoots": ["./types"],
    "baseUrl": ".",
    "paths": {
      "@entity": ["./src/entity"],
      "@mtypes/*": ["./types/*"],
      "@utils": ["./src/utils"],
      "@repository": ["./src/repository"],
      "@config": ["./src/config"],
      "@controller": ["./src/controller"],
      "@sql": ["./src/sql"],
      "@environment": ["./tests/environment"],
      "@tests/*": ["./tests/*"],
      "@init": ["./tests/init"],
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src", "tests", "types"],
  "exclude": ["dist", "node_modules"]
}
