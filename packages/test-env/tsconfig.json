{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es5",
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["./dist", "node_modules"]
}
