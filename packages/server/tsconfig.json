{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "sourceMap": true,
    "types": ["node", "jest"],
    "baseUrl": "."
  },
  "include": ["src", "tests", "types", "jest.config.ts"],
  "exclude": ["dist", "node_modules"]
}
