{
  "install": {
    "command": "pnpm --frozen-lockfile"
  },
  "build": {
    "command": "pnpm build",
    "args": {
      "ci": [],
      "no_cache": ["--skip-nx-cache"]
    }
  },
  "test": {
    "projects": [
      "repo-api",
      "repo-base",
      "repo-degree",
      "repo-graph",
      "repo-module",
      "repo-user",
      "utils",
      "docs",
      "server"
    ],
    "command": "pnpm nx test",
    "args": {
      "ci": ["--coverage", "--runInBand"],
      "no_cache": ["--coverage", "--runInBand", "--skip-nx-cache"]
    }
  }
}
