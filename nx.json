{
  "extends": "nx/presets/npm.json",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "modtree",
  "affected": {
    "defaultBase": "main"
  },
  "workspaceLayout": {
    "appsDir": "apps",
    "libsDir": "packages"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "test",
          "e2e",
          "ci:test",
          "ci:test:all",
          "ci:test:server",
          "ci:test:database",
          "ci:test:utils"
        ],
        "accessToken": "MGI3YzRiY2YtNzIwYS00MmY2LTgxM2QtNzM5NTIxOThiNDA4fHJlYWQtd3JpdGU="
      }
    }
  },
  "targetDependencies": {
    "lint": [{ "target": "build", "projects": "dependencies" }],
    "build": [
      { "target": "lint", "projects": "self" },
      { "target": "build", "projects": "dependencies" }
    ],
    "dev": [{ "target": "build", "projects": "dependencies" }],
    "ci:test:utils": [{ "target": "build", "projects": "dependencies" }],
    "ci:test:server": [{ "target": "build", "projects": "dependencies" }],
    "ci:test:database": [{ "target": "build", "projects": "dependencies" }],
    "ci:test": [
      { "target": "ci:test:utils", "projects": "self" },
      { "target": "ci:test:server", "projects": "self" },
      { "target": "ci:test:database", "projects": "self" }
    ]
  }
}
