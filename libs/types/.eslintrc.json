{
  "extends": ["../../.eslintrc.json"],
  "ignorePatterns": ["!**/*"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {}
    },
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "jsdoc/require-jsdoc": [
          "warn",
          {
            "contexts": ["TSInterfaceDeclaration", "TSMethodSignature"],
            "publicOnly": { "ancestorsOnly": true },
            "require": {
              "ClassDeclaration": true,
              "ClassExpression": true,
              "MethodDefinition": true
            }
          }
        ]
      }
    },
    {
      "files": ["*.js", "*.jsx"],
      "rules": {}
    }
  ]
}
